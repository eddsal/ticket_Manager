{% extends 'base.html.twig' %}

{% block title %}Ticket index{% endblock %}

{% block body %}
    <h1>Ticket index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Author</th>
                <th>Title</th>
                <th>Message</th>
                <th>Date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for ticket in tickets %}
            <tr>
                <td>{{ ticket.id }}</td>
                <td>{{ ticket.Author }}</td>
                <td>{{ ticket.title }}</td>
                <td>{{ ticket.message }}</td>
                <td>{{ ticket.date ? ticket.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                     {% if is_granted('ROLE_USER') == true %}
                    <a href="{{ path('ticket_show', {'id': ticket.id}) }}">show</a>
                        {% else %}
                    <a href="{{ path('ticket_edit', {'id': ticket.id}) }}">edit</a>
                             
        {% endif %}

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('ticket_new') }}">Create new</a>
{% endblock %}
